<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Task Manager</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" asp-controller="Tasks" asp-action="Index">
                Task Management
            </a>
        </div>
        <ul class="navbar-nav ms-auto">
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item text-white me-3">
                    Hello @User.Identity.Name
                </li>
                <li class="nav-item">
                    <form asp-controller="Tasks" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm px-3">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                </li>

            }
            else
            {
                <li class="nav-item">
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-success btn-sm me-2">Login</a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-sm">Register</a>
                </li>
            }
        </ul>

    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_LoginPartial" />

    @RenderSection("Scripts", required: false)
</body>
</html>
